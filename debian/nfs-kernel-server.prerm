#!/bin/sh

set -e
set -x

cat /var/lib/nfs/etab || true
exportfs -s || true
showmount -e || true
#DEBHELPER#
showmount -e || true
exportfs -s || true
cat /var/lib/nfs/etab || true

if [ "$1" != upgrade ]
then
    rm -f /var/lib/nfs/etab   \
          /var/lib/nfs/rmtab  \
          /var/lib/nfs/xtab
fi

exit 0
